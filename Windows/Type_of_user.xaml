<Window x:Class="MedicalCenter.Windows.Type_of_user"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalCenter.Windows"
        mc:Ignorable="d"
        Title="Тип пользователя" MaxHeight="250" MaxWidth="350" MinHeight="250" MinWidth="350">
    <Grid>
        <StackPanel>
        <Label Content="Выберите тип пользователя" HorizontalAlignment="Center" Margin="0,33,0,10" VerticalAlignment="Top" Width="309" 
               HorizontalContentAlignment="Center" FontSize="20" />
            <Button x:Name="registr_admin" Content="Администратор" Background="{x:Null}" Foreground="#FF673AB7" Width="167" Margin="20" FontSize="17" HorizontalAlignment="Center" Height="30" Click="registr_admin_Click" />
            <Button x:Name="registr_doctor" Content="Врач" Background="{x:Null}" Foreground="#FF673AB7" Width="167" Margin="10" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Click="registr_doctor_Click" />

        </StackPanel>
    </Grid>
</Window>
