<Window x:Class="MedicalCenter.Windows.change_or_delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalCenter.Windows"
        mc:Ignorable="d"
        Title="" MinHeight="214" MinWidth="344" Height="220" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="Удалить запись или редактировать?" HorizontalContentAlignment="Center" FontSize="16" Margin="0,20,0,0" Width="294"/>
            <Button x:Name="change" Content="Редактировать" Background="{x:Null}" Foreground="#FF673AB7" Margin="20" Width="204" Click="change_Click"/>
            <Button x:Name="del" Content="Удалить" Background="{x:Null}" Foreground="#FF673AB7" Margin="0,10,0,20" Width="204" Click="del_Click"/>

        </StackPanel>
    </Grid>
</Window>
