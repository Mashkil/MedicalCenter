<Window x:Class="MedicalCenter.Windows.old_or_new_pat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalCenter.Windows"
        mc:Ignorable="d"
        Title="Добавление пациента" MaxHeight="250" MaxWidth="350" MinHeight="210" MinWidth="300" Height="136" Width="272">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Пациент у нас впервые?" HorizontalContentAlignment="Center" FontWeight="DemiBold" FontSize="15" Margin="10"/>
            <Button x:Name="yes" Content="Да" Background="{x:Null}" Foreground="#FF673AB7" Margin="20" Width="234" Click="yes_Click"/>
            <Button x:Name="no" Content="Нет" Background="{x:Null}" Foreground="#FF673AB7" Margin="0,10,0,0" Width="238" Click="no_Click"/>
        </StackPanel>
    </Grid>
</Window>
